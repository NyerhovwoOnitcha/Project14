pipeline {
    agent any

  stages {
	stage('Initial Cleanup') {
      steps {
        dir("${WORKSPACE}") {
          deleteDir()
        }
      }
    }
	
    stage('Build') {
      steps {
        script {
          sh 'echo "build stage"'
        }
      } 
    }

    stage('Test') {
      steps {
        script {
          sh 'echo "test stage"'
        }
      }
    }
	
	stage('Package') {
      steps {
        script {
          sh 'echo "Packaging stage"'
        }
      }
    }
	
	stage('Deploy') {
      steps {
        script {
          sh 'echo "Deploying stage"'
        }
      }
    }
	
	
	stage('Initial Workspace Cleanup') {
      steps {
        cleanWs()
      }
    }
	
  }  
}   
